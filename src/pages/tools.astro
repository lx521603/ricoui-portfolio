---
import PageLayout from "@/layouts/PageLayout.astro";
import PageHeader from "@/components/elements/PageHeader.astro";
import Weather from "@/components/Weather.jsx";

const cities = ["昆明","大理","保山","腾冲","芒市","景洪"];
---

<PageLayout title="天气工具">
  <section class="site-container m-auto min-h-[50vh] flex flex-col items-center justify-start py-10">
    <PageHeader
      title="多地天气工具"
      description="显示指定城市的天气信息。未来可扩展世界时钟和汇率功能。"
    />
    
    <div class="mt-6 w-full">
      <Weather client:load cities={cities} />
    </div>
  </section>
</PageLayout>
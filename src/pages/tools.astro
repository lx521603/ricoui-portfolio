---
import PageLayout from "@/layouts/PageLayout.astro";
import PageHeader from "@/components/elements/PageHeader.astro";
import Weather from "@/components/Weather.jsx"; // JS 组件，前面写的 Weather.js
---

<PageLayout title="多城市天气">
  <section class="site-container m-auto min-h-[60vh] flex flex-col items-center justify-start py-10">
    <PageHeader
      title="多城市天气"
      description="实时查看你关心城市的天气情况"
    />
    
    <div class="mt-8 w-full">
      <Weather 
        cities={["昆明","大理","保山","腾冲","芒市","景洪"]} 
        client:load 
      />
    </div>
  </section>
</PageLayout>
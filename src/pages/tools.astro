---
import PageLayout from "@/layouts/PageLayout.astro";
import PageHeader from "@/components/elements/PageHeader.astro";
import Weather from "@/components/Weather.jsx";

const cities = ["昆明", "大理", "保山", "腾冲", "芒市", "景洪"];
const apiKey = import.meta.env.PUBLIC_OPENWEATHER_KEY;
---

<PageLayout title="天气信息">
  <section class="site-container m-auto min-h-[50vh] flex flex-col items-center justify-start py-10">
    <PageHeader
      title="多地天气"
      description="实时天气信息显示"
    />

    <div class="mt-6 w-full max-w-4xl">
      <!-- 这里直接加载 Weather 组件 -->
      <Weather client:load cities={cities} apiKey={apiKey} />
    </div>
  </section>
</PageLayout>